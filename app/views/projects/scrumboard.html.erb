<style type="text/css">

	body {
		background-color: #E8E8E8;
	}

	.cards {
		width: 150px;
		margin: 4px 0;
		background-color: maroon;
		color: white;
	}

	.columns {
		height: 650px;
		background-color: white;
	}

	.portlet {
		margin: 0 1em 1em 0; 
		background-color: #99CCFF;
	}
	
	.portlet-header { margin: 0.3em; padding-bottom: 4px; padding-left: 0.2em; }
	.portlet-header .ui-icon { float: right; }
	.portlet-content { padding: 0.4em; }


</style>


<div class="row">
	<div id="column-one" class="span3 columns">
		<h5>ToDo (all)</h5>

		<div class="input-append">
			<%= form_for @project, :remote => true do |f| %>
				<%= f.text_field :name, :class => "input-medium" %>
				<%= f.submit "add", :class => "btn" %>
			<% end %>
		</div>
		
		<button id="modal-button" type="button">Launch modal</button>		

		<% @projects.each do |project| %>
			<div class="portlet">
				<div class="portlet-header"><%= project.name %></div>
				<%= link_to "show details", project_path(project.id), :remote => true %>
				<%= link_to "hide details", 'javascript:;', :id => project.id, :class => "hide-link" %>
				<div id= "project-<%= project.id %>" class="portlet-content"></div>
			</div>
		<% end %>

	</div>
	<div class="span3 columns">
		<h5>ToDo (this week)</h5>
	</div>
	<div class="span3 columns">
		<h5>Started</h5>
	</div>
	<div class="span3 columns">
		<h5>Done</h5>
	</div>	
</div>


<div id="myModal" class="modal hide">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Modal header</h3>
  </div>
  <div class="modal-body">
    <p>One fine bodyâ€¦</p>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn">Close</a>
    <a href="#" class="btn btn-primary">Save changes</a>
  </div>
</div>